<Page x:Class="DuiFeneAuto.Views.MonitorPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DuiFeneAuto.Views"
      mc:Ignorable="d" 
      d:DesignHeight="400" d:DesignWidth="300"
      Title="MonitorPage">

    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="{Binding TextBlockText}"
                       Width="200" Height="175" FontSize="24" TextAlignment="Center"/>
            <Button Content="立即签到" Width="100" Height="40" Command="{Binding SignCommand}" />
        </StackPanel>
    </Grid>
</Page>
